FROM java:8-alpine
WORKDIR /qfdj
COPY qfdj-v3.0.jar /qfdj/qfdj-v3.0.jar
add  ffmpeg.tar.gz /qfdj/
RUN echo -n ''|base64 -d > /etc/localtime && echo -n 'Asia/Shanghai' > /etc/timezone
ENV LANG en_US.UTF-8
ENV LANGUAGE en_US:en
ENV LC_ALL en_US.UTF-8
ENTRYPOINT ["sh", "-c", "java -Xmx256m -jar /qfdj/qfdj-v3.0.jar"]